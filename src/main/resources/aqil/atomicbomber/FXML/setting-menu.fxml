<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="512.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aqil.atomicbomber.view.SettingMenuController">
   <stylesheets>
      <URL value="@../Style/menu.css" />
      <URL value="@../Style/setting-menu.css" />
   </stylesheets>
   <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
      <padding>
         <Insets left="10.0" top="10.0" />
      </padding>
      <VBox prefHeight="81.0" prefWidth="365.0" spacing="5.0">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <Label text="difficulty" />
         <HBox prefHeight="100.0" prefWidth="200.0" spacing="15.0">
            <RadioButton fx:id="easy_toggle" mnemonicParsing="false" text="easy" />
            <RadioButton fx:id="normal_toggle" mnemonicParsing="false" text="normal" />
            <RadioButton fx:id="hard_toggle" mnemonicParsing="false" text="hard" />
         </HBox>
      </VBox>
      <ImageView fx:id="volume_btn" fitHeight="110.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <Image url="@../../../Images/unmute.png" />
      </ImageView>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <RadioButton fx:id="white_back_toggle" mnemonicParsing="false" text="white &amp; black" />
      </HBox>
   </VBox>
   <ImageView fx:id="back_btn" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="10.0">
      <Image url="@../../../Images/back-icon.png" />
   </ImageView>
</AnchorPane>
