<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane prefHeight="512.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aqil.atomicbomber.view.SignupMenuController">
    <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <ImageView fx:id="avatar_img" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
            <clip>
                <Circle centerX="75" centerY="75" radius="75" />
            </clip>
            <VBox.margin>
                <Insets bottom="30.0" top="40.0" />
            </VBox.margin>
            <Image url="@../../../Images/avatar1.png" />
         <viewport>
            <Rectangle2D />
         </viewport>
        </ImageView>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <VBox fx:id="username_count" prefHeight="129.0" prefWidth="326.0">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
                <TextField promptText="Username" />
                <Label fx:id="username_error_lbl" styleClass="error_lbl" text="Label" />
            </VBox>
            <VBox fx:id="password_count" prefHeight="200.0" prefWidth="100.0">
                <PasswordField promptText="Password">
                    <VBox.margin>
                        <Insets bottom="2.0" />
                    </VBox.margin>
                </PasswordField>
                <PasswordField promptText="Repeat Password" />
                <Label fx:id="password_error_lbl" styleClass="error_lbl" text="Label" />
            </VBox>
        </VBox>
        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Sign Up">
         <VBox.margin>
             <Insets top="25.0" />
         </VBox.margin>
        </Button>
        <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0">
            <Hyperlink onAction="#onLogin" text="have you already created an account?" />
        </VBox>
        <padding>
         <Insets left="25.0" right="25.0" />
        </padding>
        <opaqueInsets>
         <Insets />
        </opaqueInsets>
    </VBox>
   <stylesheets>
      <URL value="@../Style/menu.css" />
      <URL value="@../Style/signup-menu.css" />
   </stylesheets>
</AnchorPane>
