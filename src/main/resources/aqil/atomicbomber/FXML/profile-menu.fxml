<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="512.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aqil.atomicbomber.view.ProfileMenuController">
   <stylesheets>
      <URL value="@../Style/menu.css" />
      <URL value="@../Style/profile-menu.css" />
   </stylesheets>

   <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <padding>
         <Insets left="10.0" right="10.0" top="10.0" />
      </padding>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <ImageView fx:id="avatar_btn" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../../Images/avatars/avatar3.png" />
         </ImageView>
         <VBox fx:id="username_count" prefHeight="200.0" prefWidth="100.0">
            <TextField fx:id="username_field" promptText="New Username" />
            <Label fx:id="username_field_error" styleClass="error_lbl" text="error" />
         </VBox>
         <PasswordField fx:id="password_field" promptText="New Password" />
         <Button fx:id="save_btn" mnemonicParsing="false" prefHeight="42.0" prefWidth="447.0" text="Save" />
      </VBox>
      <Button fx:id="logout_btn" mnemonicParsing="false" prefHeight="42.0" prefWidth="455.0" text="Logout">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="delete_account_btn" mnemonicParsing="false" prefHeight="42.0" prefWidth="511.0" text="Delete Account">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Button>
   </VBox>
   <ImageView id="back_btn" fx:id="back_btn" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="8.0">
      <image>
         <Image url="@../../../Images/back-icon.png" />
      </image>
   </ImageView>
</AnchorPane>
